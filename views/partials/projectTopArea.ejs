<div class="top-area">
    <nav class="issues-nav">
        <% if (title === "Issues") { %>
            <div class="nav-item-container <%= activeItem === 'opened' ? 'active' : '' %>">
                <div class="nav-item" hx-get="/issues/gitlab/project/<%= project.id %>?state=opened" hx-target="#content-container" hx-swap="outerHTML" >
                    <h3>Open</h3>
                </div>
                <span hx-trigger="load, update-issues-count from:body" hx-get="/issues/gitlab/project/<%= project.id %>/total?state=opened"> </span>
            </div>
            <div class="nav-item-container <%= activeItem === 'closed' ? 'active' : '' %>">
                <div class="nav-item" hx-get="/issues/gitlab/project/<%= project.id %>?state=closed" hx-target="#content-container" hx-swap="outerHTML">
                    <h3>Closed</h3>
                </div>
                <span hx-trigger="load, update-issues-count from:body" hx-get="/issues/gitlab/project/<%= project.id %>/total?state=closed"> </span>
            </div>
            <div class="nav-item-container <%= activeItem === 'all' ? 'active' : '' %>">
                <div class="nav-item"  hx-get="/issues/gitlab/project/<%= project.id %>" hx-target="#content-container" hx-swap="outerHTML">
                    <h3>All</h3>
                </div>
                <span hx-trigger="load, update-issues-count from:body" hx-get="/issues/gitlab/project/<%= project.id %>/total"> </span>
            </div>
        <% } else if (title === "Merge Requests") { %>
            <div class="nav-item-container <%= activeItem === 'opened' ? 'active' : '' %>">
                <div class="nav-item"  hx-get="/merge_requests/gitlab/project/<%= project.id %>?state=opened" hx-target="#content-container" hx-swap="outerHTML">
                    <h3>Open</h3>
                </div>
                <span hx-trigger="load, update-merge-requests-count from:body" hx-get="/merge_requests/gitlab/project/<%= project.id %>/total?state=opened"></span>
            </div>
            <div class="nav-item-container <%= activeItem === 'closed' ? 'active' : '' %>">
                <div class="nav-item"  hx-get="/merge_requests/gitlab/project/<%= project.id %>?state=closed" hx-target="#content-container" hx-swap="outerHTML">
                    <h3>Closed</h3>
                </div>
                <span hx-trigger="load, update-merge-requests-count from:body" hx-get="/merge_requests/gitlab/project/<%= project.id %>/total?state=closed"></span>
            </div>
            <div class="nav-item-container <%= activeItem === 'merged' ? 'active' : '' %>">
                <div class="nav-item"  hx-get="/merge_requests/gitlab/project/<%= project.id %>?state=merged" hx-target="#content-container" hx-swap="outerHTML">
                    <h3>Merged</h3>
                </div>
                <span hx-trigger="load, update-merge-requests-count from:body" hx-get="/merge_requests/gitlab/project/<%= project.id %>/total?state=merged"></span>
            </div>
            <div class="nav-item-container <%= activeItem === 'all' ? 'active' : '' %>">
                <div class="nav-item"  hx-get="/merge_requests/gitlab/project/<%= project.id %>" hx-target="#content-container" hx-swap="outerHTML">
                    <h3>All</h3>
                </div>
                <span hx-trigger="load, update-merge-requests-count from:body" hx-get="/merge_requests/gitlab/project/<%= project.id %>/total"></span>
            </div>
        <% } else if (title === "Merge Reviews") { %>
        <% } %>
    </nav>
</div>
